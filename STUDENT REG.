    private void txtStudentActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
    }                                          

    private void btnDeleteActionPerformed(java.awt.event.ActionEvent evt) {                                          
        DefaultTableModel model = (DefaultTableModel)tblTable.getModel();
        model.removeRow(tblTable.getSelectedRow());
        JOptionPane.showMessageDialog(null, "Record deleted successfully!");
    }                                         

    private void btnClearActionPerformed(java.awt.event.ActionEvent evt) {                                         
        DefaultTableModel model = (DefaultTableModel)tblTable.getModel();
        int rows = model.getRowCount() - 1;
        for(int i = rows; i>=0; i--)
    {
        model.removeRow(i);
    }
        JOptionPane.showMessageDialog(null, "Cleared successfully!");        
    }                                        

    private void btnUpdateActionPerformed(java.awt.event.ActionEvent evt) {                                          
        String studentname = txtStudent.getText();
        String year = txtYear.getText();
        String course = txtCourse.getText();
        DefaultTableModel model = (DefaultTableModel)tblTable.getModel();
        model.setValueAt(studentname, tblTable.getSelectedRow(), 0);
        model.setValueAt(year, tblTable.getSelectedRow(), 1);
        model.setValueAt(course, tblTable.getSelectedRow(), 2);
        JOptionPane.showMessageDialog(null, "Record updated successfully!");
    }                                         

    private void btnADDActionPerformed(java.awt.event.ActionEvent evt) {                                       
        String studentname = txtStudent.getText();
        String year = txtYear.getText();
        String course = txtCourse.getText();
        DefaultTableModel model = (DefaultTableModel)tblTable.getModel();
        model.addRow(new Object[]{studentname, year ,course});   
    }                                      

